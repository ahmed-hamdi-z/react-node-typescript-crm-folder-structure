{
    "compilerOptions": {
      "target": "ES6",
      "module": "Node16",
      "moduleResolution": "node16",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": ".",
      "paths": {
        "@shared/*": ["packages/shared/src/*"]
      }
    },
    "include": ["apps/**/*", "packages/**/*"],
    "exclude": ["node_modules"]
  }